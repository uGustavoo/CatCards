<resources xmlns:tools="http://schemas.android.com/tools">
        <!-- Base application theme. -->
        <style name="Theme.CatCards" parent="Theme.MaterialComponents.DayNight">
            <!-- Primary brand color. -->
            <item name="colorPrimary">@color/red_blood</item>
            <item name="colorPrimaryVariant">@color/red</item>
            <item name="colorOnPrimary">@color/white</item>
            <!-- Secondary brand color. -->
            <item name="colorSecondary">@color/red_blood</item>
            <item name="colorSecondaryVariant">@color/red</item>
            <item name="colorOnSecondary">@color/white</item>
            <!-- Status bar color. -->
            <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
            <!-- Dark theme attributes -->
            <item name="android:textColorPrimaryInverse">@color/white</item>
            <item name="android:textColorSecondaryInverse">@color/white</item>
            <item name="android:windowBackground">@color/black</item>
            <item name="android:colorBackground">@color/black</item>
            <!-- Customize your theme here. -->
        </style>

        <!-- Rest of your styles -->
    <style name="Theme.CatCards.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CatCards.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CatCards.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="app_name">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/bellota</item>
    </style>

    <style name="style_nunito_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="style_nunito_14">
